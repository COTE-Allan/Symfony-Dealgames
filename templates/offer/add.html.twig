{% block title %}Ajouter une offre}{% endblock %}

{% block body %}
<div class="form_section">

<h1>
    Ajoutez une offre
</h1>
{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
    {{form_row(form.name)}}
    {{form_row(form.description)}}
    <div>
     {{form_label(form.category)}}
    <div class="radio"> 
    {% for child in form.category %}
        {{form_row(child, {"row_attr": {"class": "radio_inner"}})}}
    {% endfor %}
    </div>
    </div>
       
   
    {{form_row(form.photoFile)}}
    {# {{ form_row(form.category) }} #}
    <button class="btn">{{ button_label|default("Cr√©er l'offre") }}</button>
{{ form_end(form) }}
</div>
{% endblock %}
